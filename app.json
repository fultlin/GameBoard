{
  "expo": {
    "name": "Морской Бой - Онлайн Сражения",
    "slug": "sea-battle-online",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "seabattlegame",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    
    "description": "Классический морской бой с онлайн-сражениями и рейтинговой системой",
    "githubUrl": "https://github.com/fultlin/GameBoard",
    "privacy": "public",
    "platforms": ["ios", "android", "web"],
    "backgroundColor": "#0A1D3F",
    
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.yourcompany.seabattle",
      "buildNumber": "1",
      "appStoreUrl": "https://apps.apple.com/app/sea-battle-online/idYOUR_APP_ID",
      "config": {
        "usesNonExemptEncryption": false
      },
      "infoPlist": {
        "NSAppTransportSecurity": {
          "NSAllowsArbitraryLoads": true
        }
      }
    },
    
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#0A1D3F",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.yourcompany.seabattle",
      "versionCode": 1,
      "permissions": [
        "INTERNET",
        "ACCESS_NETWORK_STATE"
      ],
      "playStoreUrl": "https://play.google.com/store/apps/details?id=com.yourcompany.seabattle"
    },
    
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#0A1D3F", 
          "dark": {
            "backgroundColor": "#0A1D3F"
          }
        }
      ],
      "expo-secure-store"
    ],
    
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    },
    
    "extra": {
      "eas": {
        "projectId": "your-project-id-here"
      }
    }
  }
}